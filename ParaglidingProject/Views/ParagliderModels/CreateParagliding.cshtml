@model ParaglidingProject.Models.Paraglider
@{
    ViewData["Title"] = "CreateParagliding";
}

<h1>Créer un nouveau parapente de modèle @ViewBag.ModelParagliding</h1>

<h4>Parapente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateParagliding">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ParagliderModelID" value="@ViewBag.ModelParagliding" />
            <div class="form-group">
                <label asp-for="CommissioningDate" class="control-label"></label>
                <input asp-for="CommissioningDate" class="form-control" />
                <span asp-validation-for="CommissioningDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastRevisionDate" class="control-label"></label>
                <input asp-for="LastRevisionDate" class="form-control" />
                <span asp-validation-for="LastRevisionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Retour à la liste</a>
</div>


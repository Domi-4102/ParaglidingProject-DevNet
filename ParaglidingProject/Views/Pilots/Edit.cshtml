            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Prénom</label><br />
                <input asp-for="FirstName" class="form-control" /><br />
                <span asp-validation-for="FirstName" class="text-danger validator"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Nom</label><br />
                <input asp-for="LastName" class="form-control" /><br />
                <span asp-validation-for="LastName" class="text-danger validator"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Adresse</label><br />
                <input asp-for="Address" class="form-control" /><br />
                <span asp-validation-for="Address" class="text-danger validator"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Numéro de téléphone</label><br />
                <input asp-for="PhoneNumber" class="form-control" /><br />
                <span asp-validation-for="PhoneNumber" class="text-danger validator"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Poids</label><br />
                <input asp-for="Weight" class="form-control" /><br />
                <span asp-validation-for="Weight" class="text-danger validator"></span>
            </div>

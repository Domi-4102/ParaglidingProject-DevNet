@model ParaglidingProject.Models.Pilot

@{
    ViewData["Title"] = "Editer le pilote";
}


<h1>Editer les détails de @Model.FirstName @Model.LastName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

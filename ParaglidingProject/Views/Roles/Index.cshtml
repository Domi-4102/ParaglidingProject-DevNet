@model IEnumerable<ParaglidingProject.Models.Role>

@{
    ViewData["Title"] = "Index";
}

<h1>Comité directeur</h1>

<p>
    <a asp-action="Create">Ajouter une nouvelle position dans le Comité</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pilot.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pilot.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pilot.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pilot.LastName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Editer</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ID">Détails</a> |
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.ID">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>

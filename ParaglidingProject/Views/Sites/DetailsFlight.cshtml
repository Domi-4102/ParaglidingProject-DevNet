@model ParaglidingProject.Models.Flight
@{
    ViewData["Title"] = "Details des vols";
}

<h1>Details du vol numéro @Model.ID</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TakeOffSiteID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TakeOffSiteID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LandingSiteID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LandingSiteID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pilot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pilot.FirstName) @Html.DisplayFor(model => model.Pilot.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paraglider)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParagliderID)
        </dd>
    </dl>
</div>
<div>
    @*<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Publier</a> |*@
    <a class="btn btn-primary styleLink" asp-action="Index">Retour</a>
</div>